extends _layouts/base

include ./_modules/slider/slider

block content
    main.home
        .home__container
            +slider("home__slider", "all")
                each slide in site.data.home
                    .home__slide
                        img(src=slide.mainImage)
                        .home__slide__content
                            p.home__slide__subtitle=slide.subtitle
                            h2.home__slide__title=slide.title
                            a.home__slide__button=slide.button
                        .home__slide__wrapper
                            .home__slide__image
                                img(src=slide.altImage)
                            .home__slide__group
                                p.home__slide__date=slide.date
                                h3.home__slide__group-title=slide.altTitle
                                span.home__slide__price=slide.price
